    "schemas": {
      "users": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email"
        ],
        "properties": {
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "65e4decdd286b30065d54af9"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Matt Damon"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "matt.damon@email.com"
          }
        }
      },
      "session": {
        "type": "object",
        "required": [
          "accessToken"
        ],
        "properties": {
          "accessToken": {
            "description": "Access token",
            "type": "string",
            "example": "cElQq6xadbWpRz9n2xSit24H5jCgm3WYkXH/S9b/"
          }
        }
      },
      "contacts": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "email",
          "contactType"
        ],
        "properties": {
          "_id": {
            "description": "Contact's id",

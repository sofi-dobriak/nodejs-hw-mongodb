            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "email",
                  "password"
                ],
                "properties": {
                  "name": {
                    "description": "User's name",
                    "type": "string",
                    "example": "Matt Damon"
                  },
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "matt.damon@email.com"
